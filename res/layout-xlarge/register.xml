<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hitech.JokKade"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="vertical" >

        <View
            android:id="@id/shadow"
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@color/actionbar_seprator" />
        
         <View 
            android:id="@+id/space"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="40dip" />

        <include
            android:id="@id/mostLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100.0dp"
            android:layout_marginRight="100.0dp"
            layout="@layout/view_network_unavailable"
            android:textSize="20.0sp" />

        <com.hitech.JokKade.utility.TextViewPlus
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:layout_marginTop="40.0dip"
            android:paddingRight="8.0dip"
            android:text="@string/hint_email"
            android:textColor="#372c24"
            android:textSize="20.0sp"
            app:customFont="DroidNaskh.ttf" />

        <EditText
            android:id="@id/txtEmail"
            style="@style/textbox_fill"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:inputType="textEmailAddress"
            android:textSize="20.0sp" />

        <com.hitech.JokKade.utility.TextViewPlus
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:layout_marginTop="40.0dp"
            android:paddingRight="8.0dip"
            android:text="@string/hint_pass"
            android:textColor="#372c24"
            android:textSize="20.0sp"
            app:customFont="DroidNaskh.ttf" />

        <EditText
            android:id="@id/txtPassword"
            style="@style/textbox_fill"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:inputType="textPassword"
            android:textSize="20.0sp" />

        <com.hitech.JokKade.utility.TextViewPlus
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:layout_marginTop="40.0dip"
            android:paddingRight="8.0dip"
            android:text="@string/hint_nickname"
            android:textColor="#372c24"
            android:textSize="20.0sp"
            app:customFont="DroidNaskh.ttf" />

        <EditText
            android:id="@id/txtNickname"
            style="@style/textbox_fill"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:inputType="textPassword"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/btnRegister"
            style="@style/btn"
            android:layout_marginLeft="100.0dip"
            android:layout_marginRight="100.0dip"
            android:layout_marginTop="40.0dip"
            android:text="@string/register"
            android:textSize="20.0sp" />
    </LinearLayout>

</ScrollView>