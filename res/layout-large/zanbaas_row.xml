<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hitech.JokKade"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="10.0dip" >

    <com.hitech.JokKade.utility.TextViewPlus
        android:id="@id/tvNickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="right"
        android:textColor="#ff333333"
        android:textSize="13.0sp"
        app:customFont="DroidNaskh.ttf" />

    <com.hitech.JokKade.utility.TextViewPlus
        android:id="@id/tvJomlak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="right"
        android:lineSpacingExtra="2.0sp"
        android:textColor="#ff222222"
        android:textSize="15.0sp"
        app:customFont="DroidNaskh.ttf" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="10.0dip" >

        <ImageButton
            android:id="@id/btnShare"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="6.0dip"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@id/btnLike"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/btnShare"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="6.0dip"
            android:src="@drawable/ic_star_empty" />

        <ImageButton
            android:id="@id/btnSms"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/btnLike"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:padding="6.0dip"
            android:src="@drawable/ic_message" />

        <ImageButton
            android:id="@id/btnRemove"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="6.0dip"
            android:src="@drawable/ic_remove" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/seperator" />

</LinearLayout>